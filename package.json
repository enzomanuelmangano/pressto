{
  "name": "pressto",
  "version": "0.5.2-beta.1",
  "description": "Some custom react native touchables",
  "source": "./src",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/module/src/index.d.ts",
  "typesVersions": {
    "*": {
      "glass": [
        "./lib/typescript/module/src/glass.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/typescript/module/src/index.d.ts",
        "default": "./lib/module/index.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/index.d.ts",
        "default": "./lib/commonjs/index.js"
      }
    },
    "./glass": {
      "import": {
        "types": "./lib/typescript/module/src/glass.d.ts",
        "default": "./lib/module/glass.js"
      },
      "require": {
        "types": "./lib/typescript/commonjs/src/glass.d.ts",
        "default": "./lib/commonjs/glass.js"
      }
    }
  },
  "files": [
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "bun --cwd example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enzomanuelmangano/pressto.git"
  },
  "author": "Enzo Manuel Mangano <enzomanuelmangano@gmail.com> (https://github.com/enzomanuelmangano)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enzomanuelmangano/pressto/issues"
  },
  "homepage": "https://github.com/enzomanuelmangano/pressto#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/eslint-plugin": "^0.82.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.5",
    "@types/minimatch": "^6.0.0",
    "@types/react": "^18.2.44",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-native": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-builder-bob": "^0.30.2",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-worklets": "0.5.1",
    "react-test-renderer": "^19.2.0",
    "release-it": "^15.0.0",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-reanimated": "*",
    "react-native-worklets": "*",
    "expo-glass-effect": "*",
    "@callstack/liquid-glass": "*"
  },
  "peerDependenciesMeta": {
    "expo-glass-effect": {
      "optional": true
    },
    "@callstack/liquid-glass": {
      "optional": true
    }
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "bun@1.2.19",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json",
          "esm": true
        }
      ]
    ]
  },
  "create-react-native-library": {
    "type": "library",
    "version": "0.41.2"
  }
}
